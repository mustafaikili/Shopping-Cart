@model ShoppingCart.WebMVC.UI.Models.ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}   
<div class="col-md-12">
    <a class="btn btn-success pull-right" asp-controller="Admin" asp-action="Add">Add Product</a>
</div>
<br />
<div class="col-md-12">
    <table class="table table-responsive">
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Units In Stock</td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var product in Model.Product)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Admin" asp-action="Update" asp-route-productId="@product.ProductId">Update Product</a></td>
                <td><a class="btn btn-xs btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-productId="@product.ProductId">Delete Product</a></td>
            </tr>
        }
    </table>
</div>
