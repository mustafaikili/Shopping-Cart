@model ShoppingCart.WebMVC.UI.Models.ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <table class="table table-responsive">
        <tr class="h4">
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Units In Stock</td>
            <td></td>
        </tr>
        @foreach (var product in Model.Product)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success">Add To Cart</a></td>
            </tr>
        }
    </table>
</div>
<product-list-pager page-size="@Model.PageSize"
                    page-count="@Model.PageCount"
                    current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage">
</product-list-pager>
