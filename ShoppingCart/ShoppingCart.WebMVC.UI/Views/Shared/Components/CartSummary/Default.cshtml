@model ShoppingCart.WebMVC.UI.Models.CartSummaryViewModel
<ul class="dropdown-menu">
    @foreach (var item in Model.Cart.CartLines)
    {
        <li>
            <a>
                @item.Product.ProductName
                <span class="badge">
                    @item.Quantity
                </span>
            </a>
        </li>
    }
    <li role="separator" class="divider"></li>
    <li>
        <a>
            <span class="glyphicon glyphicon-align-left glyphicon-shopping-cart">
                @Model.Cart.Total
            </span>
        </a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
        <a asp-controller="Cart" asp-action="List">Go to cart detail</a>
    </li>
</ul>